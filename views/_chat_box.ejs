<!-- CHANGE :: Creat the code for chat box -->
<% if (locals.user){ %>
	<button id="toggle-chat">Toggle Chat</button>
	
		<div id="user-chat-box" class="hidden">
			<ul id="chat-messages-list">
				<%for(let m of chatMessages){%>
					<%if(m.user_email != user.email){%>
					<li class="other-message">
						<span><%= m.message %></span>
						<sub><%=m.user_name%></sub>
					</li>
					<%}else{ %>
					<li class="self-message">
						<span><%= m.message %></span>
						<sub><%=m.user_name%></sub>

					</li>
					<%} %>
				<%} %>

			</ul>
			<div id="chat-message-input-container">
				<input id="chat-message-input" placeholder="Type message here">
				<button id="send-message">Send</button>
			</div>

		</div>
<% } %>
